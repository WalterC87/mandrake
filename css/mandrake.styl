@font-face
	font-family DKAmericain
	font-style basic
	src url('../fonts/DKAmericain.otf')

@font-face
	font-family HelveticaLTPro
	font-style basic
	src url('../fonts/HelveticaNeueLTPro-Ex.otf')

@font-face
	font-family HelveticaLTStd
	font-style basic
	src url('../fonts/HelveticaNeueLTStd-Roman.otf')

body
	background-image url('../img/background_mandrake.png')
	background-repeat repeat

header
	width 100%
	figure,nav
		display inline-block
		vertical-align top

	figure
		width 25%
		margin-top 50px
		margin-left 30px
		margin-bottom 5px
		img
			width 70%

	nav
		margin 0
		padding 0
		text-align center
		width 100%
				
		ul
			margin 0
			padding 0
			width 100%

			li
				display inline-block
				margin-left 15px
				margin-right 15px
				vertical-align top
				width 12%
				a
					img
						width 100%
						height 67px
.container
	height 25px
	margin-top 1.5%
	width 100%
	
	img 
		width 100%

	.section_title
		width 100%
		figure
			margin 0 auto
			padding 0
			width 50%
	#home
		width 100%
		#telon
			background-image url('../img/mujeres.png')
			background-repeat no-repeat
			background-size 100%
			margin 0 auto
			padding 0
			padding-top 25px
			height 570px
			position absolute
			width 95%
			z-index 10

		#slider
			background-color #333
			border-radius 0 0 20px 20px
			margin 0 auto
			padding 0
			height 550px
			width 70%

	#about_us, #directors, #clients, #services, #contact
		margin-top 100px
		margin-bottom 10px
		height auto
		width 100%

	#about_us

		#info_about
			background-image url('../img/background_sections.png')
			background-repeat repeat
			margin-top 15px
			margin-bottom 15px
			width 100%

			#text-about, #tv-about
				display inline-block
				margin 0 auto
				padding 0
				vertical-align middle
				width 45%
			#text-about
				padding 60px

				p.text_about
					font-family "HelveticaLTStd", "Arial"
					font-size 22px
					line-height 35px
			
			#tv-about
				figure
					margin 0 auto
					padding 0
					width 70%
					img
						width 100%
	#directors
		
		#container_directors
			margin 0 auto
			padding 0
			margin-top 30px
			height auto
			width 65%

			.director
				width 95%
				height 750px
				.director_header
					figure, div
						display inline-block
						vertical-align middle
					img
						width 90%
					figure
						width 25%

					div
						text-align left 
						width 70%

						h2
							font-family "DKAmericain"
							font-size 70px
							letter-spacing 15px
							margin 0
							padding 0
							margin-top 10px

						p
							font-family "HelveticaLTStd", "Arial"
							font-size 30px
							margin 0
							padding 0

				.director_display
					margin 0 auto
					padding 0
					height 100px
					width 71%

					.tv_directors
						background-image url('../img/directores_tv.png')
						background-repeat no-repeat
						background-size 100%
						margin 0 auto
						padding 0
						height 678px
						width 80%
					
					.tv_back
						background-color #000
						margin 0 auto
						padding 0
						position relative
						top -623px
						height 400px
						width 100%
						z-index 10

						.tv_play
							margin 0 auto
							padding 0
							width 50%
							position relative
							text-align center
							top 45%

							img
								width 30%

	#services
		#info_services
			background-image url('../img/background_sections.png')
			background-repeat repeat
			margin-top 15px
			margin-bottom 15px
			height auto
			width 100%
			
			img
				width 100%
			.img_services, #text_services
				display inline-block
				vertical-align top

			.img_services
				width 50%
				figure
					height 100%
					width 100%

			#text_services
				position absolute
				left 25%
				margin 0 auto
				padding 0
				margin-top 3%
				width 90%
				z-index 10

				p.text-right, p.text-left
					display inline-block
					font-family "HelveticaLTStd", "Arial"
					font-size 23px
					line-height 30px
					vertical-align top
					width 35%

				p.text-right
					text-align right 
					margin-right 2%

				p.text-left
					text-align left

				