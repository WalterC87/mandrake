@font-face
	font-family DKAmericain
	font-style basic
	src url('../fonts/DKAmericain.otf')

@font-face
	font-family HelveticaLTPro
	font-style basic
	src url('../fonts/HelveticaNeueLTPro-Ex.otf')

@font-face
	font-family HelveticaLTStd
	font-style basic
	src url('../fonts/HelveticaNeueLTStd-Roman.otf')

body
	background-image url('../img/background_mandrake.png')
	background-repeat repeat

header
	width 100%
	figure,nav
		display inline-block
		vertical-align top

	figure
		width 25%
		margin-top 25px
		margin-left 20px
		img
			width 70%

	nav
		margin 0
		padding 0
		text-align center
		width 100%
				
		ul
			height 50px
			width 100%

			li
				display inline-block
				vertical-align top
				a 
					div#mnhome, div#mnabout, div#mndirectors, div#mnclients, div#mnservices, div#mncontact
						background-image url('../img/btns_sprite.png')
						background-repeat no-repeat
						height 67px
					div#mnhome
						background-position 0 0
						width 144px
					div#mnabout
						background-position -150px 0
						width 220px		
					div#mndirectors
						background-position -380px 0
						width 235px
					div#mnclients
						background-position -620px 0
						width 200px
					div#mnservices
						background-position -820px 0
						width 212px
					div#mncontact
						background-position -1051px 0
						width 200px
